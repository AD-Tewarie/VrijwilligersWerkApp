@page
@model VrijwilligersWerkApp.Pages.GebruikersTest.GebruikersTestModel
@{
    ViewData["Title"] = "Gebruikers Test";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-body">
                    <h1 class="card-title text-center mb-4">Gebruikers Test</h1>

                    @if (ViewData["HasPreviousResults"] != null)
                    {
                        <div class="text-center mb-4">
                            <p class="lead">Je hebt de test al voltooid. Wil je de test opnieuw maken?</p>
                            <form method="post" asp-page-handler="Reset">
                                <button type="submit" class="btn btn-warning">Test Opnieuw Starten</button>
                            </form>
                        </div>
                    }
                    else if (Model.VraagModel != null)
                    {
                        <div class="progress mb-4">
                            <div class="progress-bar" role="progressbar"
                                 style="width: @Model.VraagModel.VoortgangPercentage%"
                                 aria-valuenow="@Model.VraagModel.VoortgangPercentage"
                                 aria-valuemin="0"
                                 aria-valuemax="100">
                                @Model.VraagModel.VoortgangPercentage%
                            </div>
                        </div>

                        <h2 class="h4 mb-4">@Model.VraagModel.VraagTekst</h2>

                        <form method="post" asp-page-handler="Antwoord" class="needs-validation" novalidate>
                            <div class="form-group mb-4">
                                <div class="btn-group d-flex" role="group">
                                    @for (int i = 1; i <= 5; i++)
                                    {
                                        <input type="radio" class="btn-check" name="antwoord"
                                               id="antwoord@(i)" value="@i" required>
                                        <label class="btn btn-outline-primary" for="antwoord@(i)">
                                            @GetAntwoordLabel(i)
                                        </label>
                                    }
                                </div>
                            </div>

                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary">
                                    Volgende
                                </button>
                            </div>
                        </form>
                    }

                    @if (!string.IsNullOrEmpty(Model.FeedbackMessage))
                    {
                        <div class="alert alert-danger mt-3">
                            @Model.FeedbackMessage
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@functions {
    private string GetAntwoordLabel(int value)
    {
        return value switch
        {
            1 => "Helemaal oneens",
            2 => "Oneens",
            3 => "Neutraal",
            4 => "Eens",
            5 => "Helemaal eens",
            _ => string.Empty
        };
    }
}