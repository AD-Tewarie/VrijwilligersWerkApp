@page
@model VrijwilligersWerkApp.Pages.NieuwWerk.MaakWerkModel
@using Application.Werk.ViewModels

<div class="container mt-4">
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }
    @if (!ModelState.IsValid)
    {
        <div class="alert alert-danger">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
    }

    <div class="card">
        <div class="card-header">
            <h2>Nieuw Vrijwilligerswerk Toevoegen</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-page-handler="CreateWork">
                <div class="form-group mb-3">
                    <label asp-for="WerkModel.Titel" class="form-label">Titel</label>
                    <input asp-for="WerkModel.Titel" class="form-control" />
                    <span asp-validation-for="WerkModel.Titel" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="WerkModel.Omschrijving" class="form-label">Omschrijving</label>
                    <textarea asp-for="WerkModel.Omschrijving" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="WerkModel.Omschrijving" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="WerkModel.MaxCapaciteit" class="form-label">Maximum Capaciteit</label>
                    <input asp-for="WerkModel.MaxCapaciteit" class="form-control" type="number" min="1" max="100" />
                    <span asp-validation-for="WerkModel.MaxCapaciteit" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="WerkModel.Locatie" class="form-label">Locatie</label>
                    <input asp-for="WerkModel.Locatie" class="form-control" />
                    <span asp-validation-for="WerkModel.Locatie" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="WerkModel.CategorieId" class="form-label">Categorie</label>
                    <select asp-for="WerkModel.CategorieId" asp-items="Model.Categorieën" class="form-select"></select>
                    <span asp-validation-for="WerkModel.CategorieId" class="text-danger"></span>
                </div>

                <div class="form-group mt-4">
                    <button type="submit" class="btn btn-primary">Toevoegen</button>
                    <a asp-page="/RegistreerWerk/VrijwilligersWerkOverzicht" class="btn btn-secondary">Annuleren</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}